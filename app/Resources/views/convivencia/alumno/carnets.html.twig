{% extends 'base.html.twig' %}


{% block body %}

    {% block header %}
        <main class="w3-container">
            <h1>Carnets Alumnos</h1>
            <form method="post">
                <div class="w3-row-padding">
                    <div class="w3-col m3 w3-section">
                        <input type="text" name="like" id="partesSearchBar"> <i
                                class="fa fa-search fa-lg fa-flip-horizontal"></i> <input type="submit" value="Buscar"
                                                                                          class="w3-button w3-text-white"/>
                    </div>
                </div>

                <div class="w3-col m12 w3-responsive w3-section">
                    <table class="w3-table-all w3-centered w3-margin-top">
                        <tr>
                            <th>Alumno</th>
                            <th>Puntos</th>
                            <th>Grupo</th>
                        </tr>
                        {% for alumno in alumnos %}
                            {% if alumno.puntos == 0 %}
                                {% set colorClass = 'w3-text-green' %}
                            {% elseif alumno.puntos > 0 and alumno.puntos <7 %}
                                {% set colorClass = 'text-orange' %}
                            {% elseif alumno.puntos == 7 %}
                                {% set colorClass = 'w3-text-pink' %}
                            {% elseif alumno.puntos > 7 and alumno.puntos <10 %}
                                {% set colorClass = 'text-darkRed' %}
                            {% elseif alumno.puntos >= 10 %}
                                {% set colorClass = 'w3-text-red' %}
                            {% else %}
                                {% set colorClass = 'w3-text-black' %}
                            {% endif %}
                            <tr class="{{ colorClass }}">
                                <td>
                                    <a href="{{ path('verAlumno', {'id': alumno.id}) }}">{{ alumno.getNombreCompleto() }}</a>
                                </td>
                                <td>{{ alumno.puntos }}</td>
                                {% if alumno.idCurso != null %}
                                    <td>{{ alumno.idCurso.grupo }}</td>
                                {% else %}
                                    <td>Ninguno</td>
                                {% endif %}
                                {#<td><a href="{{ path('edit_alumno', {'id': alumno.id}) }}">editar</a></td>#}
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </form>
        </main>
    {% endblock %}
{% endblock %}