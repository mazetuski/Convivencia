{% extends 'base.html.twig' %}

{% block body %}
    <div class="w3-col s10 w3-display-middle">
        <h1 class="w3-center">Exportar Carnets</h1>

        {% for flash_message in app.session.flashBag.get('exportar') %}
            <div class="w3-panel w3-pale-green w3-round-large">
                <p class="w3-center">{{ flash_message }}</p>
            </div>
        {% endfor %}

        {% for flash_message in app.session.flashBag.get('exportarError') %}
            <div class="w3-panel w3-pale-red w3-round-large">
                <p class="w3-center">{{ flash_message }}</p>
            </div>
        {% endfor %}

        <div class="w3-row w3-center">
            <div class="contenedorCartaAlumno">
                <form action="{{ path('admin_export_carnets') }}" method="post" class="formExport formExport2 w3-content ">
                    <label class="w3-text-teal marginTop">Alumno</label>
                    <select name="alumnos" class="w3-select w3-border w3-light-grey chosen-select" required>
                        <option value="Todos">Todos</option>
                        {% for alumno in alumnos %}
                            <option value="{{ alumno.id }}">{{ alumno.getNombreCompletoYCurso() }}</option>
                        {% endfor %}
                    </select>
                    <label class="w3-text-teal marginTop">Cursos</label>
                    <select name="cursos" class="w3-select w3-border w3-light-grey chosen-select" required>
                        <option value="Todos">Todos</option>
                        {% for curso in cursos %}
                            <option value="{{ curso.id }}">{{ curso.grupo }}</option>
                        {% endfor %}
                    </select>
                    <label class="w3-text-teal marginTop">Puntos</label>
                    <select name="puntosFiltro" class="w3-select w3-border w3-light-grey chosen-select"
                            id="carnetFilterPuntos" required>
                        {% for puntos in puntosSelect %}
                                <option value="{{ puntos }}">{{ puntos }}</option>
                        {% endfor %}
                    </select>
                    <input class="w3-button w3-text-white" type="submit" name="exportar" value="Exportar">
                </form>
            </div>
        </div>
    </div>
{% endblock %}
