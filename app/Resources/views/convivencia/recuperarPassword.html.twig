{% extends 'base.html.twig' %}

{% block body %}
    <div class="w3-col s10 w3-display-middle">
    <h1 class="w3-center">Recuperar Contrase√±a</h1>

    {% for flash_message in app.session.flashBag.get('password') %}
        <div class="w3-panel w3-pale-green w3-round-large">
            <p class="w3-center">{{ flash_message }}</p>
        </div>
    {% endfor %}

    {% for flash_message in app.session.flashBag.get('passwordError') %}
        <div class="w3-panel w3-pale-red w3-round-large">
            <p class="w3-center">{{ flash_message }}</p>
        </div>
    {% endfor %}

    <div class="w3-row w3-center">
        <div class="contenedorCartaAlumno">
            <form action="{{ path('recuperarPassword') }}" method="post">
                <label class="w3-col s12 w3-text-center marginBottom" for="username">Usuario</label>
                <input id="username" name="username" class="w3-col s12 w3-select w3-border w3-light-grey marginBottomMore"
                       placeholder="Escriba su usuario..." type="text">
                <input class="w3-button w3-text-white" type="submit" name="recuperar" value="Recuperar">
            </form>
        </div>
    </div>
    </div>
{% endblock %}
