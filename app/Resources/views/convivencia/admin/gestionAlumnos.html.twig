{% extends 'base.html.twig' %}


{% block body %}

    <style>
        body{
            background-color: white;
        }
    </style>

    <div class="w3-row w3-container w3-margin-bottom">
        <h1 class="w3-center">Importar Alumnos</h1>

        {% for flash_message in app.session.flashBag.get('alumnos') %}
            <div class="flash-notice">
                <p class="w3-center">{{ flash_message }}</p>
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class':'w3-content formConvivencia'}}) }}
        {{ form_widget(form) }}
        <input class="w3-button w3-block w3-section .azulTemaButton w3-text-white" type="submit" name="importarAlumnos" value="Importar">
        {{ form_end(form) }}

    </div>

{% endblock %}
